---
// Click button, get confetti!
// Styled by Tailwind :)
---

<button
	class="appearance-none py-2 px-4 bg-shadc text-diffc font-semibold rounded-lg shadow-md hover:bg-primc focus:outline-none focus:ring-2 focus:ring-darkc focus:ring-opacity-75"
>
	<slot />
</button>

<script>
	import confetti from 'canvas-confetti';
	const button = document.body.querySelector('button');
	
	if (button) {
		button.addEventListener('click', () => confetti());
	}
</script>
